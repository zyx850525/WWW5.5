# Server Configuration
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/cocreate?schema=public"

# Blockchain Configuration
RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
# Or use Alchemy: https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
CHAIN_ID=11155111

# Contract Addresses (update after deployment)
PROJECT_FACTORY_ADDRESS=0x0000000000000000000000000000000000000000
STAKE_VAULT_ADDRESS=0x0000000000000000000000000000000000000000
TASK_MANAGER_ADDRESS=0x0000000000000000000000000000000000000000
CONTRIBUTION_NFT_ADDRESS=0x0000000000000000000000000000000000000000

# Event Listener Configuration
START_BLOCK=0
# Set to latest block number when first deploying to skip historical events
# Or set to 0 to sync from contract deployment block

# IPFS Configuration (Pinata)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key
PINATA_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

